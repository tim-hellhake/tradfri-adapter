{
  "name": "tradfri-adapter",
  "display_name": "Tradfri",
  "version": "0.2.1",
  "description": "Connect your Tradfri devices",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/tradfri-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/tradfri-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/tradfri-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "lib/BrightnessProperty.js",
    "lib/ColorLightBulb.js",
    "lib/ColorProperty.js",
    "lib/ColorTemperatureProperty.js",
    "lib/DimmableLightBulb.js",
    "lib/index.js",
    "lib/LightBulb.js",
    "lib/OnOffProperty.js",
    "lib/SmartPlug.js",
    "lib/tradfri-adapter.js",
    "lib/TradfriDevice.js",
    "lib/WhiteSpectrumLightBulb.js",
    "manifest.json"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "required": [
        "securityCode"
      ],
      "properties": {
        "securityCode": {
          "type": "string",
          "title": "The security code on the bottom of your tradfri gateway"
        },
        "experimental": {
          "type": "object",
          "title": "Experimental features which may be removed at any time",
          "properties": {
            "brightnessProperty": {
              "type": "boolean",
              "title": "Enable the experimental brightness property"
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "node-tradfri-client": "^2.1.4"
  },
  "devDependencies": {
    "@types/node": "^13.9.2",
    "typescript": "^3.8.3"
  }
}
